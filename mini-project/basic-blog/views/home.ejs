<%- include('partials/header') %>

<h1>Home</h1>
<p>
    <%= startingContent %>
</p>

<% if (myPosts.length > 0) { %>
    <h1 style="margin-top: 50px;">My Posts</h1>
    <% myPosts.forEach((post) => { %>
        <h3 style="margin-top: 20px;"><%= post.title %></h3>
        <p><%= post.content.substring(0, 100) %><a href="/posts/<%= post.title %>">...readmore</a></p>
    <% }) %>
<% } %>


<%- include('partials/footer') %>